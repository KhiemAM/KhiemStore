@model List<KhiemStore.Models.Product>
@{
    ViewBag.Title = "Laptop";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-3">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Content</li>
        </ol>
    </nav>
    <nav class="bg-white p-3" style="border-radius:5px;">
        <div class="mb-3 d-flex justify-content-end">
            <label class="form-label mt-1">Sắp xếp theo</label>
            @if (ViewBag.SortButton == "PhoBien")
            {
                <a class="btn btn-secondary ms-3" href="/Collection/All" role="button" style="background-color: #09E0FA;">Phổ Biến</a>
            }
            else
            {
                <a class="btn btn-secondary ms-3" href="/Collection/All" role="button">Phổ Biến</a>
            }
            @if (ViewBag.SortButton == "MoiNhat")
            {
                <a class="btn btn-secondary ms-3" href="/Collection/All?SortButton=MoiNhat" role="button" style="background-color: #09E0FA;">Mới Nhất</a>
            }
            else
            {
                <a class="btn btn-secondary ms-3" href="/Collection/All?SortButton=MoiNhat" role="button">Mới Nhất</a>
            }

            @if (ViewBag.SortButton == "Gia")
            {
                <div class="dropdown ms-3">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: #09E0FA;">
                        Giá
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Collection/All?SortButton=Gia&SortStyle=TangDan">Tăng Dần</a></li>
                        <li><a class="dropdown-item" href="/Collection/All?SortButton=Gia&SortStyle=GiamDan">Giảm Dần</a></li>
                    </ul>
                </div>

            }
            else
            {
                <div class="dropdown ms-3">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Giá
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Collection/All?SortButton=Gia&SortStyle=TangDan">Tăng Dần</a></li>
                        <li><a class="dropdown-item" href="/Collection/All?SortButton=Gia&SortStyle=GiamDan">Giảm Dần</a></li>
                    </ul>
                </div>
            }

        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3 mb-3">
                    <div class="card shadow" style="width: 18rem;">
                        <div class="inner">
                            <img src="/Content/Img/@item.Img" class="card-img-top" alt="...">
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@item.ProductName</h6>
                            <p class="card-text" style="color:red; font-size:18px; font-weight:700">@Html.DisplayFor(row => item.Price)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </nav>
</div>